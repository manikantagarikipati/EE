<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="@dimen/min_widget_padding"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="@dimen/min_widget_padding"
    android:layout_marginBottom="@dimen/min_widget_padding"
    android:layout_marginStart="@dimen/max_widget_padding"
    android:layout_marginLeft="@dimen/max_widget_padding"
    android:layout_marginRight="@dimen/max_widget_padding"
    android:layout_marginEnd="@dimen/max_widget_padding"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.easyexpense.commons.android.widgets.customviews.PrimaryTextView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/iv_default_board"
            android:layout_toStartOf="@+id/iv_default_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/secondary_text_size"
            android:textColor="@color/black"
            tools:text="Ledger 1"
            android:id="@+id/tv_board_name"/>


        <com.easyexpense.commons.android.widgets.customviews.SecondaryTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_board_name"
            android:id="@+id/tv_board_balance"
            tools:text="40,000"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:paddingTop="@dimen/min_widget_padding"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/max_widget_padding"
            android:background="@drawable/circle_red"
            android:layout_width="wrap_content"
            android:id="@+id/iv_default_board"
            android:layout_height="wrap_content"
            android:contentDescription="@string/default_board_select"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>