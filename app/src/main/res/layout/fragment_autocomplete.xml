<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/cv_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:contentDescription="@string/action_back"
            android:padding="@dimen/max_widget_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_action_back"
            android:background="?attr/selectableItemBackground"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <com.easyexpense.android.helper.utils.InstantAutoComplete
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_marginRight="@dimen/min_widget_padding"
            android:layout_marginEnd="@dimen/min_widget_padding"
            android:layout_toRightOf="@+id/iv_action_back"
            android:layout_toEndOf="@+id/iv_action_back"
            android:id="@+id/atv_results"
            android:imeOptions="actionDone"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>