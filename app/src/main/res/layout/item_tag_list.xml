<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/max_widget_padding"
    xmlns:tools="http://schemas.android.com/tools">

    <com.easyexpense.commons.android.widgets.customviews.PrimaryTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="Food"
        android:textColor="@color/grey"
        android:textSize="@dimen/secondary_text_size"
        android:layout_toLeftOf="@+id/vIndicator"
        android:layout_toStartOf="@+id/vIndicator"
        android:id="@+id/tv_tag_item"/>

    <View
        android:id="@+id/vIndicator"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/indicator_dimen"
        android:layout_height="@dimen/indicator_dimen"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_red"/>
</RelativeLayout>